  "components": {
    "schemas": {
      "Student": {
        "required": [
          "birth_date",
          "first_name",
          "last_name"
        ],
        "type": "object",
        "properties": {
          "last_name": {
            "type": "string",
            "example": "BOUCHER"
          },
          "first_name": {
            "type": "string",
            "example": "LÃ©on"
          },
          "birth_date": {
            "type": "string",
            "format": "date",
            "example": "22/12/2012"
          }
        }
      },
      "Mark": {
        "required": [
          "subject",
          "value"
        ],
        "properties": {
          "value": {
            "type": "number",
            "example": 15.5
          },
          "subject": {
            "type": "string",
            "example": "grammar"
          }
        }
      },
      "inline_response_201": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "894a62e5-fb22-4a76-b8b7-965c102ea365"
          }
        }
      },
      "inline_response_400": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "default": "Required fields: \"last_name\" :string, \"first_name\": string, \"birth_date\": date(DD-MM-YYYY)"
          }
        }
      },
      "inline_response_500": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "default": "Internal Server Error"
          }
        }
      },
      "inline_response_404": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "default": "Not Found"
          }
        }
      },
      "inline_response_400_1": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "default": "Required fields: \"value\" :numeric, \"subject\": string"
          }
        }
      },
      "inline_response_200": {
